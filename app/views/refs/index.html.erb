<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Liste des Références</h1>
</div>

<div class="jumbotron">
  <%= link_to 'Créer Référence', new_ref_path, class: "btn btn-primary btn-md" %><br/><br/>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Référence</th>
        <th>Description</th>
        <th>Pu ht</th>
        <th>Tva</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @refs.each do |ref| %>
        <tr>
          <td><%= ref.id %></td>
          <td><%= ref.name %></td>
          <td><%= ref.desc %></td>
          <td><%= ref.pu_ht %></td>
          <td><%= ref.tva %></td>
          <td>
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Plus
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><%= link_to 'Voir', ref %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'Modifier', edit_ref_path(ref) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'Supprimer', ref, method: :delete, data: { confirm: 'Etes-vous ŝur?' } %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>


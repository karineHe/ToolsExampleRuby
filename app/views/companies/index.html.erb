<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Liste des Entreprises</h1>
</div>

<%= link_to 'Nouvelle Entreprise', new_company_path, class:"btn btn-default" %>
</br></br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id </th>
      <th>Nom</th>
      <th>Site web</th>
      <th>Téléphone</th>
      <th>Email</th>
      <th>Contacts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.website %></td>
        <td><%= company.phone %></td>
        <td><%= company.email %></td>
        <td>
          <table class="table-hover">
            <tbody>
              <% company.contacts.each do |contact| %>
                <tr><%= contact.lname+" "+contact.fname+"\n" %></tr>
              <% end %>
            </tbody>
          </table>
        </td>
        <td>
         <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Plus
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to 'Voir', company %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Modifier', edit_company_path(company) %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Supprimer', company, method: :delete, data: { confirm: 'Etes-vous ŝur?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


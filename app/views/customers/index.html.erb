<p id="notice"><%= notice %></p>

<h1>Liste des Clients</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Téléphone</th>
      <th>Email</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.phone %></td>
        <td><%= company.email %></td>
        <td><%= company.contact_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

